{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.38/schema.json",
  "app_specific_configuration_path": "$Env:USERPROFILE/applications.json",
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "transparency": true,
  "transparency_alpha": 254,
  "default_workspace_padding": 2,
  "default_container_padding": 4,
  "border": true,
  "border_width": 3,
  "border_offset": 0,
  "mouse_follows_focus": false,
  "animation": {
    "enabled": true,
    "duration": 300,
    "fps": 160,
    "style": "EaseOutBack"
  },
  "theme": {
    "palette": "Catppuccin",
    "name": "Mocha",
    "single_border": "Green",
    "unfocused_border": "Blue",
    "focused_border": "Green",
    "floating_border": "Lavender",
    "stack_border": "Yellow",
    "monocle_border": "Red"
  },
  "monitors": [
    {
      "workspaces": [
        {
          "name": "I",
          "layout": "BSP"
        },
        {
          "name": "II",
          "layout": "VerticalStack"
        },
        {
          "name": "III",
          "layout": "HorizontalStack"
        }
      ]
    },
    {
      "workspaces": [
        {
          "name": "Home",
          "layout": "BSP"
        },
        {
          "name": "2",
          "layout": "VerticalStack"
        },
        {
          "name": "3",
          "layout": "HorizontalStack"
        }
      ]
    }
  ],
  "floating_applications": [
    {
      "kind": "Exe",
      "id": "Files.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "ACShadows.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "Overwatch.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "Photos.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "PotPlayerMini64.exe",
      "matching_strategy": "Equals"
    }
  ]
}
